<Window x:Class="richcord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RichCord" Height="350" Width="400">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- Corrigido de "*" para "Auto" -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Discord Application ID -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Application ID:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAppId" Grid.Row="0" Grid.Column="1" Margin="4" />

        <!-- Rich Presence Details -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Details:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtDetails" Grid.Row="1" Grid.Column="1" Margin="4" />

        <!-- Rich Presence State -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="State:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtState" Grid.Row="2" Grid.Column="1" Margin="4" />

        <!-- Large Image Key -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Large Image Key:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtLargeImageKey" Grid.Row="3" Grid.Column="1" Margin="4" />

        <!-- Small Image Key -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Small Image Key:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSmallImageKey" Grid.Row="4" Grid.Column="1" Margin="4" />

        <!-- Buttons -->
        <Button x:Name="btnConnect" Grid.Row="5" Grid.Column="0" Content="Connect" Margin="4" Click="btnConnect_Click"/>
        <Button x:Name="btnUpdatePresence" Grid.Row="5" Grid.Column="1" Content="Update Presence" Margin="4" Click="btnUpdatePresence_Click"/>
        <Button x:Name="btnDisconnect" Grid.Row="6" Grid.Column="0" Content="Disconnect" Margin="4" Click="btnDisconnect_Click"/>
    </Grid>
</Window>
